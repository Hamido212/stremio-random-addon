{
  "apps": [{
    "name": "stremio-addon",
    "script": "server.js",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "200M",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "logs/error.log",
    "out_file": "logs/out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true
  }]
}
